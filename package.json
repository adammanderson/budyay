{
  "name": "budyay",
  "version": "0.0.1",
  "description": "Connecting buddies",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "dev": "lerna exec yarn dev",
    "build": "lerna exec yarn build",
    "dev:pwa": "yarn dev --scope @budyay/pwa",
    "build:pwa": "yarn build --scope @budyay/pwa",
    "build:functions": "yarn build --scope @budyay/functions",
    "build:all": "yarn run build:pwa && yarn run build:functions",
    "predeploy": "rimraf dist/ && yarn run build:all",
    "deploy": "cross-env NODE_ENV=production firebase deploy --only functions,hosting --debug"
  },
  "author": "Adam Anderson",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/enzyme-adapter-react-16": "1.0.6",
    "@types/jest": "25.2.1",
    "@types/next": "^9.0.0",
    "@types/node": "13.11.1",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "babel-loader": "8.1.0",
    "cross-env": "7.0.2",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "enzyme-to-json": "3.4.4",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "jest": "25.3.0",
    "lerna": "^3.20.2",
    "rimraf": "3.0.2",
    "ts-jest": "25.3.1",
    "typescript": "3.8.3"
  }
}
